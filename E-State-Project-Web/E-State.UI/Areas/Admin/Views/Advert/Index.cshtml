@model List<Advert>
@{
    ViewData["Title"] = "Index";
}

@if (Model.Count == 0)
{
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="alert alert-success">Herhangi bir ilan yok.</div>
            </div>
        </div>
    </div>
}

else
{
    <table class="table table-bordered table table-striped" id="table">
        <tr>
            <th>Açıklama</th>
            <th>Fiyat</th>
            <th>Oda Sayısı</th>
            <th>Banyo Sayısı</th>
            <th>Alanı</th>
            <th>Kat</th>
            <th>Adres</th>
            <th>İlan Resimleri</th>
            <th>Resim Ekle</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>@item.NumberOfooms</td>
                    <td>@item.BathroomNumbers</td>
                    <td>@item.Area</td>
                    <td>@item.Floor</td>
                    <td>@item.Address</td>
                    <td><a class="btn btn-success" asp-action="ImageList" asp-route-id="@item.AdvertId">İlan Resimleri</a></td>
                    <td><a class="btn btn-info" asp-action="ImageCreate" asp-route-id="@item.AdvertId">Resim Ekle</a></td>
                    <td><a class="btn btn-danger" data-id="@item.AdvertId" id="delete">Sil</a></td>
                    <td><a class="btn btn-warning" asp-action="Update" asp-route-id="@item.AdvertId">Güncelle</a></td>
                </tr>

            }
        </tbody>
    </table>

}
<br>
<a class="btn btn-primary" asp-action="Create">Ekle</a>


<script type="text/javascript">
    $("#table").on("click", "#delete", function () {

        var id = $(this).data("id");

        swal({
            title: "İlanı Tamamen Silmek İstiyor musunuz?",
            text: "İlan Tamamen Silinecek silmek istediğinize emin misiniz!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        type: "GET",
                        url: '/Admin/Advert/Delete/' + id,

                        success: function () {
                            toastr.error("İlan Silme İşlemi başarıyla gerçekleşti")

                        }
                    });

                    $(this).parent("td").parent("tr").remove();
                }
            });

    });

</script>