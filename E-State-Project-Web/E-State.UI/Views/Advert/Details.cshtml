                                    <span> Yok  </span>

                                }




                            </div>
                            <div class="space">
                                <img src="~/south-master/img/icons/space.png" alt="">
                                <span>@Model.Area m <sub>2</sub></span>
                            </div>
                        </div>
                        <!-- Core Features -->
